    <asp:DataList ID="DataList1" runat="server" RepeatColumns="6" RepeatDirection="Horizontal">
            <ItemTemplate>
                <div class ="c16042501" style =" color:<%#DataBinder.Eval(Container.DataItem, "d_font_color")%>;
