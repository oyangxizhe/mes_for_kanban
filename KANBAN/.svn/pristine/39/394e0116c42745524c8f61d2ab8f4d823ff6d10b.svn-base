        private string datecka()
        {
            string ds = "";
            if (DateTime.Now.Hour >= 7 && DateTime.Now.Hour <= 23)
            {
                ds = DateTime.Now.AddDays(0).ToString("yyyy/MM/dd") + " 7:30";
            }
            else
            {
                ds = DateTime.Now.AddDays(-1).ToString("yyyy/MM/dd") + " 19:30";
            }
            return ds;
        }
